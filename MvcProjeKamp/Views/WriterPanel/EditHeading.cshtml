
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@model EntityLayer.Concrete.Heading

<h2>Başlık Güncelleme Sayfası</h2>

@using (Html.BeginForm("EditHeading", "WriterPanel", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HeadingId)

        <div class="form-group">
            @Html.Label("Başlık İsim")
            <div class="col-md-10">
                @Html.EditorFor(model => model.HeadingName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HeadingName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.Label("Tarih")*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.HeadingDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HeadingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.Label("Yazar")*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.WriterId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WriterId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.Label("Yazar")*@
            <div class="col-md-10">
                @Html.HiddenFor(model => model.HeadingStatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HeadingStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Kategori")
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CategoryId, (List<SelectListItem>)ViewBag.category, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Güncelle" class="btn btn-success" />
            </div>
        </div>
    </div>
}



