@model IEnumerable<EntityLayer.Concrete.Heading>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    string color = "";
    string color2 = "";
    string color3 = "";
    string yazi = "";

}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">


    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <br />
                <br />
                <a href="/Heading/Create" class="btn btn-success">Başlık Ekle</a>
                <br />

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>

                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects" id="myTable">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 15%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 10%">
                                Durum
                            </th>

                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.CategoryId == 1)
                            {
                                color = "badge badge-warning";
                            }
                            if (item.CategoryId == 3)
                            {
                                color = "badge badge-secondary";
                            }
                            if (item.CategoryId == 5)
                            {
                                color = "badge badge-warning";
                            }
                            if (item.CategoryId == 4)
                            {
                                color = "badge badge-primary";
                            }

                            switch (item.HeadingStatus)
                            {
                                case true:
                                    color2 = "badge badge-success";
                                    color3 = "badge badge-danger";
                                    yazi = "Pasif Yap";
                                    break;
                                case false:
                                    color2 = "badge badge-danger";
                                    color3 = "badge badge-success";
                                    yazi = "Aktif Yap";
                                    break;
                              
                            }

                            <tr>
                                <td>
                                    @item.HeadingId
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.HeadingDate.ToShortDateString()
                                    </small>
                                </td>

                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src=@item.Writer.WriterImage>
                                        </li>

                                    </ul>
                                </td>
                                <td> <span class="@color2">@item.HeadingStatus</span></td>

                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Heading/Bring/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="@color3 " href="/Heading/Delete/@item.HeadingId">
                                        <i class="fas fa-trash">
                                        </i>
                                       @yazi
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>


</body>
</html>

