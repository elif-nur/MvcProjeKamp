@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<a href="/AdminCategory/Create" class="btn btn-success">Ekle</a>
<br />
<br />
<table class="table table-bordered" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Kategori Açıklaması</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryId</th>
                <td>@item.CategoryName</td>
                <td>@item.CategoryDescription</td>
                <td>@item.CategoryStatus</td>
                <td><a href="/AdminCategory/Delete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCategory/Bring/@item.CategoryId" class="btn btn-primary">Güncelle</a></td>
                <td><a href="/AdminCategory/Heading/@item.CategoryId" class="btn btn-warning">Başlıklar</a></td>
            </tr>
        }
    </tbody>
</table>

